<!DOCTYPE html>

<html>
    <head>
        <title>Admin Management</title>

        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    </head>

    <body>
        <h2 style="margin: 20px">Admin Management</h2><hr>

        <div class="container-fluid">
            
                <table class="table">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Address</th>
                        <th>Order Item</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    
                    <% result.forEach((res) => { 
                        var status = ''
                        if (moment(res.date).format('YYYY-MM-DD') == moment().format('YYYY-MM-DD')) {
                            status = 'In progress'
                        } else if (moment(res.date).add(1, 'days').format('YYYY-MM-DD') == moment().format('YYYY-MM-DD')) {
                            status = 'Dispatched'
                        } else {
                            status = 'Delivered'
                        }
                    %>
                    <tbody>
                    <tr>
                        <td><%= res.name %></td>
                        <td><%= res.email %></td>
                        <td><%= res.address %></td>
                        <td><%= res.orderitem %></td>
                        <td><%= status %></td>
                        <td>
                            <a class="btn btn-default" href="/send_mail/<%= res.email %>/<%= status %>">Send Mail</a>
                        </td>
                    </tr>
                    </tbody>
                    <% }) %>
                </table>
            
        </div>
    </body>
</html>